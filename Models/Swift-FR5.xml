<?xml version="1.0"?>

<PropertyList>
	<path>swift-fr5.ac</path>
	
	<!-- MP sound call -->
  <sound><path>Aircraft/Supermarine-Swift/Sounds/mp-sound.xml</path></sound>

	
	
		<!-- Transparent Surfaces for Rembrandt rendering -->
   
   <effect>
     <inherits-from>Effects/model-transparent</inherits-from>
	  <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
	<object-name>canopy-glass</object-name>
       <object-name>front-glass</object-name>
	   <object-name>gunsight-glass</object-name>
	   
    </effect>
	
	
	 <!-- Turns off non rembrant lighting and effects 	-->
	
<animation>
        <type>select</type>
       
	<object-name>gunsight-glass</object-name>
		<condition>
            <not>
            <property>/sim/rendering/rembrandt/enabled</property>
            </not>
        </condition>
    </animation>

<!-- Suppress Sparts in Cockpit View -->
 <animation>
  <type>select</type>
  <object-name>canopy-glass</object-name>
       <object-name>front-glass</object-name>
  <condition>
   <not>
   <equals>
    <property>sim/current-view/view-number</property>
    <value>0</value>
   </equals>
   </not>
  </condition>
 </animation>
   
   
   <!-- Interior -->

 <model>
  <path>Aircraft/Supermarine-Swift/Models/Interior/panel.xml</path>
  <offsets>
   <x-m>0</x-m>
   <y-m>0</y-m>
   <z-m>0</z-m>
  </offsets>
 </model>  
 
 <!-- reheat -->
 
  <model>
  <name>Engine1</name>
  <path>Aircraft/Supermarine-Swift/Models/Effects/reheat/engine-1.xml</path>
  <offsets>
   <x-m>8.1</x-m>
   <y-m>0</y-m>
   <z-m>-0.1</z-m>
  </offsets>
  </model>
 
 
 <!-- Animations -->
 
   <!-- Aileron animation -->
   
   <animation> 
	<name>AileronLeft</name>
		<object-name>l-aleron_0</object-name>
		<object-name>l-aleron_1</object-name>
   </animation>
   
  <animation>
    <type>rotate</type>
    <object-name>AileronLeft</object-name>
    <property>surface-positions/aileron-pos-norm</property>
    <factor> -16 </factor>
    <axis>
      <x1-m>  1.710 </x1-m>
      <y1-m> -2.8 </y1-m>
      <z1-m>  -0.45 </z1-m>
      <x2-m>  2.65 </x2-m>
      <y2-m> -4.62 </y2-m>
      <z2-m>  -0.42</z2-m>
    </axis>
  </animation>
  
    <animation>
    <type>rotate</type>
    <object-name>r-aleron_1</object-name>
    <property>surface-positions/aileron-pos-norm</property>
    <factor> -16 </factor>
    <axis>
      <x1-m>  1.710 </x1-m>
      <y1-m> 2.8 </y1-m>
      <z1-m>  -0.45 </z1-m>
      <x2-m>  2.65 </x2-m>
      <y2-m> 4.62 </y2-m>
      <z2-m>  -0.42</z2-m>
    </axis>
  </animation>
   
   
    <animation>
  <type>rotate</type>
  <object-name>rudder_0</object-name>
  <object-name>rudder_1</object-name>
    <property>surface-positions/rudder-pos-norm</property>
  <factor>-15</factor>
  <axis>
     <x1-m>4.9</x1-m>
     <y1-m>0</y1-m>
     <z1-m>0.9</z1-m>
     <x2-m>5.7</x2-m>
     <y2-m>0</y2-m>
     <z2-m>2.2</z2-m>
  </axis>
 </animation>
 
 
 <animation>
  <type>rotate</type>
  <object-name>l-elevator_1</object-name>
  <object-name>l-elevator_0</object-name>
  <property>surface-positions/elevator-pos-norm</property>
