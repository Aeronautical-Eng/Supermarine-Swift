<PropertyList>

    <name>aircraft-dialog</name>
    <layout>vbox</layout>
    <resizable>false</resizable>
    <modal>false</modal>
    <draggable>true</draggable>



    <group>
        <layout>hbox</layout>

        <empty><stretch>true</stretch></empty>
        <text>
            <label>Aircraft Options</label>
        </text>
        <empty><stretch>true</stretch></empty>

        <button>
            <legend/>
            <key>Esc</key>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>




   

  
    
          



        <group>
            <layout>vbox</layout>

            <checkbox>
                <halign>left</halign>
                <label>Show human models</label>
                <property>/sim/model/occupants</property>
                <live>true</live>
                <binding>
                    <command>dialog-apply</command>
                </binding>
            </checkbox>

        </group>

     

        
                

        <group>
            <layout>vbox</layout>

            <text>
                <label>Tank size options</label>
                <halign>center</halign>
            </text>

            <group>
                <layout>hbox</layout>

                <radio>
                    <halign>left</halign>
                    <label>Default (43 gal)</label>
                    <property>sim/model/swift/tank_flag_0</property>
                    <live>true</live>
                    <enable>
                        <not>
                            <property>/sim/freeze/replay-state</property>
                        </not>
                    </enable>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                    <binding>
                        <command>nasal</command>
                        <script>
                            setprop("/fdm/jsbsim/fuel/tank", 0);
                            setprop("sim/model/swift/tank_flag_0", 1);
                            setprop("sim/model/swift/tank_flag_1", 0);
                        </script>
                    </binding>
                </radio>

                <radio>
                    <halign>left</halign>
                    <label>Integral (68 gal)</label>
                    <property>sim/model/swift/tank_flag_1</property>
                    <live>true</live>
                    <enable>
                        <not>
                            <property>/sim/freeze/replay-state</property>
                        </not>
                    </enable>
                    <binding>
                        <command>dialog-apply</command>
                    </binding>
                    <binding>
                        <command>nasal</command>
                        <script>
                            setprop("/fdm/jsbsim/fuel/tank", 1);
                            setprop("sim/model/swift/tank_flag_0", 0);
                            setprop("sim/model/swift/tank_flag_1", 1);
                        </script>
                    </binding>
                </radio>
            </group>
        </group>

  


    <group>
        <layout>hbox</layout>
        <default-padding>6</default-padding>

        <empty><stretch>true</stretch></empty>

        <button>
            <legend>Close</legend>
            <equal>true</equal>
            <key>Esc</key>
            <default>true</default>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>

</PropertyList>
