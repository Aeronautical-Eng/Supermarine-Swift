<PropertyList include="SwiftFR5-main.xml">
    <fdm>
        <jsbsim>
            <fcs>
                <yaw-damper-enable type="bool">0</yaw-damper-enable>
            </fcs>
            <systems>
                <canopy>
                    <command type="double">0</command>
                    <position type="double">0</position>
                </canopy>
                <gear>
                    <emergency-handle type="double">0</emergency-handle>
                </gear>
                <ecs>
                    <inside-ownship alias="/sim/current-view/internal" />
                </ecs>
                <NWS>
                    <engaged type="double">0</engaged>
                </NWS>
                <radar>
                    <range type="int">40</range>
                </radar>
                <tailhook>
                    <tailhook-cmd-norm type="double">0</tailhook-cmd-norm>
                </tailhook>
            </systems>
            <mass>
                <tip-tanks-fitted type="double">0</tip-tanks-fitted>
            </mass>
        </jsbsim>
    </fdm>

    <canopy>
        <position-norm alias="/fdm/jsbsim/systems/ecs/canopy-position" />
    </canopy>

    <sim>
        <minimum-fg-version>2018.1</minimum-fg-version>

        <description>Supermarine Swift FR.5</description>
        <long-description>
            Single-seat tactical-reconnaissance aircraft powered by a Rolls-Royce Avon 114 turbojet engine (7,175 lbf  dry,  afterburner 9,450 lbf). The lengthened nose accommodates three cameras.
                        
            Gross weight: 21,673 lb. VNE 620kn. Range: 547.5 nmi. Service ceiling: 45,800 ft. 
        </long-description>

        <!-- 3d model Copyright (C) 2020 Virtavia, released under the GPL -->
        <description type="string">Supermarine Swift FR.5</description>
        <author type="string">Virtavia, StuartC, Avionyx, Richard Harrison</author>
        <status type="string">V1.0</status>
        <flight-model>jsb</flight-model>
        <aero>swift-vsp</aero>
        <variant-id type="int">1</variant-id>

        <tags>
            <tag>fighter</tag>
            <tag>jet</tag>
            <tag>single-engine</tag>
            <tag>retractable-gear</tag>
        </tags>

        <rating>
            <FDM type="int">5</FDM>
            <systems type="int">3</systems>
            <cockpit type="int">5</cockpit>
            <model type="int">5</model>
        </rating>


        <fuel-fraction>1.0</fuel-fraction>
        <license>See licence.txt</license>
        <startup>

            <splash-texture>Aircraft/Supermarine-Swift/splash.png</splash-texture>
        </startup>

        <flaps>
            <setting>0.0</setting>
            <setting>0.4</setting>
            <setting>0.7</setting>
            <setting>1.0</setting>
        </flaps>

        <!-- Walker position on exiting aircraft -->
        <model>
            <path>Aircraft/Supermarine-Swift/Models/Swift-FR5.xml</path>
            <map>
				<default_exit>
					<x-offset-m type ="float">-2</x-offset-m>
					<y-offset-m type ="float">-1.5</y-offset-m>
				</default_exit>
			</map>

        </model>

        <rendering>

            <refl_correction type="string">-0.43</refl_correction>
            <!-- edit this to alter the strength of the reflection -->
        </rendering>

        <systems>
            <autopilot>
                <path>Aircraft/Supermarine-Swift/Systems/autopilot.xml</path>
            </autopilot>

            <autopilot n="102">
                <path>Systems/glass-rain.xml</path>
            </autopilot>

            <autopilot n="103">
                <path>Aircraft/Supermarine-Swift/Systems/swift-sound-system.xml</path>
            </autopilot>

            <electrical>
                <path>Aircraft/Generic/generic-electrical.xml</path>
            </electrical>
        </systems>


        <sound>
            <path>Aircraft/Supermarine-Swift/Sounds/swift-sound.xml</path>
        </sound>

        <!-- Pilot initial view head eye position -->
        <view n="0">
            <internal archive="y">true</internal>
            <config>
                <x-offset-m archive="y">0</x-offset-m>
                <y-offset-m archive="y">0.68</y-offset-m>
                <z-offset-m archive="y">-2.8</z-offset-m>
                <pitch-offset-deg>-15</pitch-offset-deg>
                <default-field-of-view-deg>80</default-field-of-view-deg>
            </config>
        </view>

<!--pilot taken from yasim hunter-->
		<menubar>
			<default>
				<menu n="10">
					<label>Hunter</label>
					<enabled type="bool">true</enabled>
					<item>
						<label>Toggle pilot model</label>
						<binding>
							<command>property-toggle</command>
							<property>sim/model/hunter/show-pilot</property>
						</binding>
					</item>
				</menu>
			</default>
		</menubar>
		<hunter>
			<show-pilot archive="y"
									type="bool">true</show-pilot>
		</hunter>
        
        <multiplay>
            <generic>

                <float n="2" alias="/engines/engine[0]/reheat" />
                <int n="9" type="int" alias="/sim/variant-id"/>
            </generic>
        </multiplay>

        <multiplay>
            <generic>
                <float n="2" alias="/engines/engine[0]/reheat" />
            </generic>
        </multiplay>

        <submodels>
            <serviceable type="bool">true</serviceable>
            <path>submodels.xml</path>
        </submodels>
        <submodels>
			<serviceable type="bool">true</serviceable>
			<!--<path>Aircraft/Hunter/Models/hunter-submodels.xml</path>-->
		</submodels>

    </sim>


    <engines>
        <engine n="0">
            <running>false</running>
        </engine>
    </engines>


    <controls>
        <flight>
            <flaps-lever type="double">0</flaps-lever>
        </flight>
        <gear>
            <brake-parking>1</brake-parking>
        </gear>
    </controls>

    <consumables>
        <fuel>
            <tank n="0">
                <level-gal_us archive="y">115.29</level-gal_us>
                <name>Right Wing</name>
                <kill-when-empty type="bool">false</kill-when-empty>
            </tank>
            <tank n="1">
                <level-gal_us archive="y">115.29</level-gal_us>
                <name>Left Wing</name>
                <kill-when-empty type="bool">false</kill-when-empty>
            </tank>
            <tank n="2">
                <level-gal_us archive="y">124.90</level-gal_us>
                <name>Rear</name>
                <kill-when-empty type="bool">false</kill-when-empty>
            </tank>
            <tank n="3">
                <level-gal_us archive="y">117.69</level-gal_us>
                <name>Center</name>
                <kill-when-empty type="bool">false</kill-when-empty>
            </tank>
            <tank n="4">
                <name>Front</name>
                <level-gal_us archive="y">256.7</level-gal_us>
                <kill-when-empty type="bool">false</kill-when-empty>
            </tank>
            <tank n="5">
                <name>Belly "drop tank"</name>
                <level-gal_us archive="y">130.6</level-gal_us>
                <kill-when-empty type="bool">false</kill-when-empty>
            </tank>
        </fuel>
    </consumables>

    <input>
        <keyboard include="keyboard.xml" />
    </input>

    <environment>
        <turbulence>
            <use-cloud-turbulence>true</use-cloud-turbulence>
        </turbulence>
    </environment>

    <nasal>
        <Supermarine-Swift>
            <file>Aircraft/Supermarine-Swift/Nasal/liveries.nas</file>
        </Supermarine-Swift>

        <SwiftFR5>
            <file>Nasal/save.nas</file>
        </SwiftFR5>

        <notifications>
            <file>Aircraft/Supermarine-Swift/Nasal/ArmamentNotification.nas</file>
             <file>Aircraft/Supermarine-Swift/Nasal/GeoBridgedTransmitter.nas</file>
        </notifications>

        <vector>
            <!-- must be before RCS, armament and radar -->
            <file>Aircraft/f16/Nasal/vector.nas</file>
        </vector>
        
        <damage>
            <file>Aircraft/Supermarine-Swift/Nasal/damage.nas</file>
        </damage>
        
        <rcs>
            <!-- must be before radar -->
            <file>Aircraft/Supermarine-Swift/Nasal/radar/rcs_mand.nas</file>
            <file>Aircraft/Supermarine-Swift/Nasal/radar/rcs.nas</file>
        </rcs>

 

        <!--In windows the recorded tacview telemetry.acmi files are under C:\Users\Your PC\AppData\Roaming\flightgear.org\Export-->
        <tacview>
            <file>Aircraft/Supermarine-Swift/Nasal/tacview.nas</file>
        </tacview>

        <radar_system>
            <file>Aircraft/Supermarine-Swift/Nasal/radar/radar-system-database.nas</file>
            <file>Aircraft/Supermarine-Swift/Nasal/radar/radar-system.nas</file>
            <file>Aircraft/Supermarine-Swift/Nasal/radar/apg-68.nas</file>
        </radar_system>

        <airbases>
            <file>Aircraft/Supermarine-Swift/Nasal/airbases.nas</file>
        </airbases>

        <aircraft>
            <file>Aircraft/Supermarine-Swift/Nasal/aircraft-main.nas</file>
            <file>Aircraft/Supermarine-Swift/Nasal/ext_stores.nas</file>
            <file>Aircraft/Supermarine-Swift/Nasal/fuel-system.nas</file>
        </aircraft>

		<hunter>
			<file>Aircraft/Supermarine-Swift/Models/hunter.nas</file>
		</hunter>

        <datalink>
            <file>Aircraft/Supermarine-Swift/Nasal/datalink.nas</file>
        </datalink>

    </nasal>

</PropertyList>
