<!--
************************************************************************
Supermarine Swift FR.5 additional details following similar methods coding to the c172p by Jon Check

Started March 28 2024 by Taeke van den Bosch, taekev@gmail.com

Mass and fuel details from Pilots Notes Swift FR.5 AP-4348E-PN-Swift5-ocr supplied by AVIALOGS https://www.avialogs.com/aircraft-s/supermarine/item/104136-a-p-4348e-pilot-s-notes-swift-f-r-5
and Jever Steam laundry https://www.jeversteamlaundry.org/swiftpic001.htm  

Geometry and schematics by Aviadejavu https://aviadejavu.ru/Images6/AN/AN06-11/33-1.jpg and the-blueprints.com https://www.the-blueprints.com/blueprints/modernplanes/modern-su-sz/68898/view/supermarine_swift_fr_mk_5/.

************************************************************************
-->

<PropertyList include="Aircraft/Generic/Human/Include/walker-include.xml">
    <sim include="swift-views.xml">
        
                <help include="Supermarine-Swift-help.xml"/>
                <checklists include="Supermarine-Swift-checklists.xml"/>
                <tutorials include="Tutorials/SwiftFR5-tutorials.xml"/>

        <model>
            <path archive="y">Aircraft/Supermarine-Swift/Models/Swift-FR5.xml</path>
            <fallback-model-index type="int">1</fallback-model-index>

            <crew>
              <pilot n="0">
                    <pose include="Models/Human/pose-pilot.xml"/>
                    <character>0</character>
                    <outfit>0</outfit>
                    <equipment>0</equipment>
                    </pilot>
            </crew>

                <!-- Human models persistent menu choice -->
                <occupants type="bool">true</occupants>

        </model>

        <!-- Walker settings -->
        <walker>
                <gender>0</gender>
                <altitude-ft>-6.0</altitude-ft>
        </walker>

 <!-- Save some properties when the simulator is shut down -->
        <aircraft-data>
            <path>/sim/model/swift/save-state</path>
            <path>/systems/electrical/save-battery-charge</path>
            <path>/systems/electrical/battery-charge-percent</path>
            <path>/consumables/fuel/tank[0]/level-norm</path>
            <path>/consumables/fuel/tank[1]/level-norm</path>
            <path>/consumables/fuel/tank[2]/level-norm</path>
            <path>/consumables/fuel/tank[3]/level-norm</path>
            <path>/consumables/fuel/tank[5]/level-norm</path>
            <path>/sim/model/immat</path>
            <path>/sim/current-view/user/x-offset-m</path>
            <path>/sim/current-view/user/y-offset-m</path>
            <path>/sim/current-view/user/z-offset-m</path>
            <path>/sim/current-view/user/pitch-offset-deg</path>
            <path>/sim/current-view/user/default-field-of-view-deg</path>
            <path>/fdm/jsbsim/fuel/tank</path>
        </aircraft-data>

        <systems>
            <path>Aircraft/Supermarine-Swift/Systems/systems.xml</path>

            <property-rule n="105">
                <path>Aircraft/Supermarine-Swift/Systems/pilot.xml</path>
            </property-rule>
        </systems>
        
        <menubar include="gui/dialogs/swift-menu.xml"/>
            
        <gui>
            <dialogs>
                <swift>
                    <save>
                        <filename type="string">save1.xml</filename>
                        <filename type="string">save2.xml</filename>
                        <filename type="string">save3.xml</filename>
                        <filename type="string">save4.xml</filename>
                        <filename type="string">save5.xml</filename>
                    </save>
                </swift>
            </dialogs>
        </gui>
    </sim>







    <payload>
        <weight>
            <name type="string">Pilot</name>
            <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[0]"/>
            <arm-in alias="/fdm/jsbsim/inertia/pointmass-location-X-inches[0]"/>
            <min-lb type="double">0.0</min-lb>
            <max-lb type="double">300.0</max-lb>
        </weight>




        <!-- 170 lb max per empty ammunition tanks and 50 lb per equipment bays (no alteration to ballast required)  -->
        <weight n="1">
            <name>ammunition bay</name>
            <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[1]"/>
                  <selected>Baggage</selected>
            <opt>
                <name>Baggage</name>
                <lbs>340</lbs>
            </opt>
            <opt>
                <name>Ammo</name>
                <lbs>340</lbs>
            </opt>
 
        </weight>


        <weight n="2">
            <name>equipment bay</name>
            <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[2]"/>
            <selected>Baggage</selected>
            <opt>
                <name>Baggage</name>
                <lbs>100</lbs>
            </opt>
            <opt>
                <name>equipment</name>
                <lbs>100</lbs>
            </opt>
        </weight>

        <weight>
            <name type="string">ammunition bay</name>
            <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[1]"/>
            <arm-in alias="/fdm/jsbsim/inertia/pointmass-location-X-inches[0]"/>
            <min-lb type="double">0.0</min-lb>
            <max-lb type="double">340</max-lb>
    
        </weight>

                <weight>
            <name type="string">equipment bay</name>
            <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[2]"/>
            <arm-in alias="/fdm/jsbsim/inertia/pointmass-location-X-inches[0]"/>
            <min-lb type="double">0.0</min-lb>
            <max-lb type="double">100</max-lb>
    
        </weight>

        <weight>
            <name type="string">weapons</name>
            <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[4]"/>
            <arm-in alias="/fdm/jsbsim/inertia/pointmass-location-X-inches[0]"/>
            <min-lb type="double">0.0</min-lb>
            <max-lb type="double">700</max-lb>
            <!-- guns and fittings arm (1.30m forward of cg) -->
        </weight>

        <weight>
            <name type="string">optional avionics</name>
            <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[5]"/>
            <arm-in alias="/fdm/jsbsim/inertia/pointmass-location-X-inches[0]"/>
            <min-lb type="double">0.0</min-lb>
            <max-lb type="double">65</max-lb>
            <!-- DME IFF GGS (4.0m forward of cg) -->
        </weight>


        <weight n="6">
            <name>cameras</name>
            <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[7]"/>
            <selected>none</selected>
            <opt>
                <name>none</name>
                <lbs>0</lbs>
            </opt>
            <opt>
                <name>F.95 nose</name>
                <lbs>26</lbs>
            </opt>
            <opt>
                <name>F.95 beam</name>
                <lbs>26</lbs>
            </opt>
            <opt>
                <name>F.95 gun bay</name>
                <lbs>26</lbs>
            </opt>
            <opt>
                <name>G.45 belly</name>
                <lbs>26</lbs>
            </opt>
            <opt>
                <name>All</name>
                <lbs>104</lbs>
            </opt>
        <!-- F.95 nose and/or beam (5.50m and 4.5mm forward of cg)   -->
        <!-- G.45 camera and F.95 gun bay camera (2.50m forward of cg)  -->
        </weight>

        <weight n="7">
            <name type="string">Ballast weights</name>
            <weight-lb alias="/fdm/jsbsim/inertia/pointmass-weight-lbs[6]"/>
            <arm-in alias="/fdm/jsbsim/inertia/pointmass-location-X-inches[0]"/>
            <min-lb type="double">0.0</min-lb>
            <max-lb type="double">290</max-lb>
            <!-- 19 total ballast weights 10 lb each  (6.50mm rear of CG)
              Ballasting as follows:
              14 - for guns and fittings
              1  - for DME
              1  - for I.F.F
              1  - per set of V.H.F.
              1  - for G.G.S
              1  - for F.45 camera
              2  - per F.95 camera nose or beam
              1  - gun F.95 bay camera 
              5  - standard always carried
            
            -->
        </weight>
        <pilot-state type="int">0</pilot-state>
        <securing-state type="int">0</securing-state>
    </payload>

    <limits>
        <!--
            Specifications Vne: 600 KIAS
            Normal category (19500 lbs):
                max positive-g: 7.5, max negative-g: -3,
            With belly tank category (21500 lbs):
                max positive-g: 6.5, max negative-g: -3,
            Structure holds at least 150 % max g's
        -->
        <max-positive-g>7.5</max-positive-g>
        <max-negative-g>-3</max-negative-g>

        <vne>600</vne>

        <mass-and-balance12>
            <maximum-ramp-mass-lbs>21850</maximum-ramp-mass-lbs>
            <maximum-takeoff-mass-lbs>21500</maximum-takeoff-mass-lbs>
            <maximum-landing-mass-lbs>17000</maximum-landing-mass-lbs>
        </mass-and-balance12>

        <mass-and-balance-belly-tank>
            <maximum-ramp-mass-lbs>21850</maximum-ramp-mass-lbs>
            <maximum-takeoff-mass-lbs>21500</maximum-takeoff-mass-lbs>
            <maximum-landing-mass-lbs>2400</maximum-landing-mass-lbs>
        </mass-and-balance-belly-tank>



        <mass-and-balance>
            <!-- Define some nodes for the Fuel and Payload dialog.
                 Aliasing is done later in Nasal/c172p.nas.
                 Forward CG limit 5.5ins aft of datum
                 Rear CG limit 9.6ins oft of datum
            -->
            <maximum-ramp-mass-lbs/>
            <maximum-takeoff-mass-lbs/>
            <maximum-landing-mass-lbs/>
            <cg>
                <dimension type="string">in</dimension>
                <limit>
                    <entry>
                        <position type="double">35.0</position>
                        <mass-lbs type="double">1450</mass-lbs>
                    </entry>
                    <entry>
                        <position type="double">35.0</position>
                        <mass-lbs type="double">1950</mass-lbs>
                    </entry>
                    <entry>
                        <position type="double">41</position>
                        <mass-lbs type="double">2550</mass-lbs>
                    </entry>
                    <entry>
                        <position type="double">47.2</position>
                        <mass-lbs type="double">2550</mass-lbs>
                    </entry>
                    <entry>
                        <position type="double">47.2</position>
                        <mass-lbs type="double">1450</mass-lbs>
                    </entry>
                </limit>
            </cg>
        </mass-and-balance>
    </limits> 

    <save>
        <latitude-deg type="double">0.0</latitude-deg>
        <longitude-deg type="double">0.0</longitude-deg>
        <altitude-ft type="double">0.0</altitude-ft>
        <pitch-deg type="double">0.0</pitch-deg>
        <heading-deg type="double">0.0</heading-deg>
        <roll-deg type="double">0.0</roll-deg>
        <uBody-fps type="double">0.0</uBody-fps>
        <vBody-fps type="double">0.0</vBody-fps>
        <wBody-fps type="double">0.0</wBody-fps>
    </save>

</PropertyList>
