        <mass-and-balance>
            <maximum-ramp-mass-lbs>21850</maximum-ramp-mass-lbs>
            <maximum-takeoff-mass-lbs>21500</maximum-takeoff-mass-lbs>
            <maximum-landing-mass-lbs>17000</maximum-landing-mass-lbs>
        </mass-and-balance>



        <mass-and-balance>
            <!-- Define some nodes for the Fuel and Payload dialog.
                 Aliasing is done later in Nasal...nas.
                 Forward CG limit 5.5ins aft of datum (0.140m) (datum 5.618m from nosetip) 5.758m or 226.7 ins
                 Rear CG limit 9.6ins oft of datum (0.244m) 5.862m or 230.79 ins
                 Aero model setup at 228.346 ins
            -->
            <maximum-ramp-mass-lbs/>
            <maximum-takeoff-mass-lbs/>
            <maximum-landing-mass-lbs/>
            <cg>
                <dimension type="string">in</dimension>
                <limit>
                    <entry>
                        <position type="double">226.7</position>
                        <mass-lbs type="double">21500</mass-lbs>
                    </entry>
                    <entry>
                        <position type="double">228.346</position>
                        <mass-lbs type="double">21500</mass-lbs>
                    </entry>
                    <entry>
                        <position type="double">230.79</position>
                        <mass-lbs type="double">21500</mass-lbs>
                    </entry>
                </limit>
            </cg>
        </mass-and-balance>
    </limits> 

