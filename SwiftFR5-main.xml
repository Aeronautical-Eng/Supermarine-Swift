    <limits>
        <!--
            Specifications Vne: 600 KIAS
            Normal category (19500 lbs):
                max positive-g: 7.5, max negative-g: -3,
            With belly tank category (21500 lbs):
                max positive-g: 6.5, max negative-g: -3,
            Structure holds at least 150 % max g's
        -->
